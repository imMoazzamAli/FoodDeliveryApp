<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardMain"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:descendantFocusability="blocksDescendants"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/customImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/customTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/myriad_set_pro_semibold"
            android:text="Title"
            android:textSize="10pt"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/customDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/myriad"
                android:text="Min Delivery: $25"
                android:textColor="@color/colorBlack"
                android:textSize="6pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"

                android:layout_toEndOf="@id/customDescription"
                android:fontFamily="@font/myriad"
                android:text="Status"
                android:textColor="@color/colorPurple"

                android:textSize="6pt" />

        </RelativeLayout>

        <RatingBar
            android:id="@+id/customRatingBar"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/customBtnMore"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounded_button_menu"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"

                android:fontFamily="@font/myriad"

                android:text="Menu"
                android:textAllCaps="false"
                android:textColor="#919191"
                android:textSize="7pt"
                android:textStyle="bold" />

            <ImageButton
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="15dp"
                android:layout_height="9dp"
                android:layout_marginLeft="-22dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_button_menu"
                android:src="@drawable/img_menu" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
