<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtExpandTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/myriad"
        android:text="Title here"
        android:textColor="@color/colorBlack"
        android:textSize="8pt" />

    <Button
        android:id="@+id/btnColor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtExpandTitle"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtExpandTitle"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toStartOf="@id/txtExpandPrice"
        android:fontFamily="@font/myriad"
        android:text="Description Detail will appear here with one or more lines"
        android:textColor="#a8a8a8"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/txtExpandPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtExpandTitle"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@id/btnExpandMinus"
        android:fontFamily="@font/myriad"
        android:text="$20"
        android:textColor="#333333"
        android:textSize="8pt" />

    <Button
        android:id="@+id/btnExpandMinus"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:layout_below="@id/txtExpandTitle"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@id/tvQuantity"
        android:background="#A046BF"
        android:enabled="true"
        android:fontFamily="@font/myriad"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/colorWhite"
        android:textSize="8pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_below="@id/txtExpandTitle"
        android:layout_toStartOf="@id/btnExpand"
        android:fontFamily="@font/myriad_set_pro_semibold"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorBlack"
        android:textSize="8pt" />

    <Button
        android:id="@+id/btnExpand"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtExpandTitle"
        android:layout_marginEnd="0dp"
        android:background="#A046BF"
        android:enabled="true"
        android:fontFamily="@font/myriad"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/colorWhite"
        android:textSize="8pt"
        android:textStyle="bold" />

</RelativeLayout>
