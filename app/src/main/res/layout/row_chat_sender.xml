<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/avatar_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_profile_image"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@id/avatar_right"
        android:text="Muhammad ali saad"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sender_name"
        android:layout_marginStart="40dp"
        android:layout_toStartOf="@id/avatar_right"
        android:background="@drawable/chat_sender_rectangle">

        <TextView
            android:id="@+id/text_sender_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:text="I am fine. What you doing? fffffffa ggggggggggggggggggggggggggggggggggggggggg"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </RelativeLayout>

