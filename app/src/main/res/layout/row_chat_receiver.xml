<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_profile_image"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_receiver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/avatar_left"
        android:text="Moazzam Ali"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_receiver_name"
        android:layout_below="@+id/text_receiver_name"
        android:layout_marginEnd="40dp"
        android:background="@drawable/chat_receiver_rectangle">

        <TextView
            android:id="@+id/text_receiver_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/chat_receiver_rectangle"
            android:text="How are you? fffffffffffffffffffffffffffffffff ggggg gggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </RelativeLayout>

