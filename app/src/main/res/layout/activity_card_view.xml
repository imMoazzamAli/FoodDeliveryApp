            <AutoCompleteTextView
                android:id="@+id/actvWhereAreYou"
                android:layout_width="275dp"
                android:layout_height="35dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/rounded_edit_text"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_place_black_24dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Where are you?"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/colorSilver"
                android:textColorHint="@color/colorSilver"
                android:textSize="15sp" />

            <AutoCompleteTextView
                android:id="@+id/actvWhatYouWant"
                android:layout_width="275dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_edit_text"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_import_export_black_24dp"
                android:hint="What do you want?"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/colorSilver"
                android:textColorHint="@color/colorSilver"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardFastFood"
                    android:layout_width="125dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/img_fast_food" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="70dp"
                        android:fontFamily="@font/myriad_set_pro_semibold"
                        android:text="Fast Food"
                        android:textColor="@color/colorPurple"
                        android:textSize="8pt" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardKebabs"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="150dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/img_kababs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="70dp"
                        android:fontFamily="@font/myriad_set_pro_semibold"
                        android:text="Kebabs"
                        android:textColor="@color/colorPurple"
                        android:textSize="8pt" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardChinese"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="120dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/img_chinese" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="70dp"
                        android:fontFamily="@font/myriad_set_pro_semibold"
                        android:text="Chinese"
                        android:textColor="@color/colorPurple"
                        android:textSize="8pt" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardPizza"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="120dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/img_pizza" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="70dp"
                        android:fontFamily="@font/myriad_set_pro_semibold"
                        android:text="Pizza"
                        android:textColor="@color/colorPurple"
                        android:textSize="8pt" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardThai"
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="240dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
